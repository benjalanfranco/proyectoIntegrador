<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <% if (locals.usuarioLog) { %>
        <main>
            <div class="uk-section uk-section-xsmall">
                <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                    <section class="uk-flex uk-width-2-3 detalle-container">
                        <article class=" fotopp uk-width-2-3 uk-flex uk-flex-center uk-flex-middle detalle-post">
                            <img class="fotoPerfil uk-width-2-3" src="<%= post.imagen %>" alt="Imagen del post" class="imagen-post ">
                        </article>
                        <article class="uk-width-1-3 uk-flex-column comentarios-detalle">
                            <div class="info-usuario uk-flex ">
                                <div class="uk-width-1-3">
                                    <img src="<%= post.user.foto_perfil %>" >
                                </div>
                                <h4 ><a href='/users/detalleUsuario/<%= post.idUsuario %>'><%= post.user.usuario %> </a></h4>
                            </div>
                                <% if (post.idUsuario == locals.usuarioLog.id) { %> 
                                    <a href='/post/<%= post.id %>/editarPost'>Editar Posteo</a>
                                <% } %>

                                <% if (post.idUsuario == locals.usuarioLog.id) { %> 
                                <form action="/post/eliminarPost" method="POST" >
                                <button type="submit">Eliminar Posteo</button>
                                </form>
                                <% } %>
                                <h4>Comentarios</h4>
                                <div class="lista-comentarios" >           
                                <% comments.forEach(comment => { %>
                                    <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                        <div class="uk-width-1-4 uk-flex uk-flex-center">
                                            <img class="uk-margin-remove uk-width-2-4"src="<%= comment.user.foto_perfil %>" alt="Foto de usuario">
                                        </div>
                                        <h5 class="uk-margin-remove uk-width-2-4"><a href='/users/detalleUsuario/<%= comment.user.id %>'><%= comment.user.usuario %></a></h5><h6 class="uk-margin-remove uk-width-2-4"><%= comment.comentario %></h6>
                                        <a href="" uk-icon="icon:heart; ratio: 0.8" class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                                    </div>                           
                                <% }); %>
                            </div>
                            <form method="POST">
                                <div class="form-group">
                                    <textarea class="form-control" id="exampleFormControlTextarea1" name="comentario" id="comentario" rows="3"></textarea>
                                    <button class="uk-button uk-button-primary uk-margin-small-top" type="submit">Comentar</button>
                                </div>
                            </form>
                        </article>
                    </section>
                </div>
            </div>
        </main>
    <%}else{%>
            <main>
                <div class="uk-section uk-section-xsmall">
                    <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                        <section class="uk-flex uk-width-2-3 detalle-container">
                            <article class="uk-width-2-3 uk-flex uk-flex-center uk-flex-middle detalle-post">
                                <img class="uk-width-2-3" src="<%= post.imagen %>" alt="Imagen del post" class="imagen-post ">
                            </article>
                            <article class="uk-width-1-3 uk-flex-column comentarios-detalle">
                                <div class="info-usuario uk-flex ">
                                    <div class="uk-width-1-3">
                                        <img src="<%= post.user.foto_perfil %>" >
                                    </div>
                                    <h4 ><a href='/users/detalleUsuario/<%= post.idUsuario %>'><%= post.user.usuario %> </a></h4>
                                </div>
                                    <h4>Comentarios</h4>
                                    <div class="lista-comentarios" >           
                                    <% comments.forEach(comment => { %>
                                        <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                            <div class="uk-width-1-4 uk-flex uk-flex-center">
                                                <img class="uk-margin-remove uk-width-2-4"src="<%= comment.user.foto_perfil %>" alt="Foto de usuario">
                                            </div>
                                            <h5 class="uk-margin-remove uk-width-2-4"><a href='/users/detalleUsuario/<%= comment.user.id %>'><%= comment.user.usuario %></a></h5><h6 class="uk-margin-remove uk-width-2-4"><%= comment.comentario %></h6>
                                            <a href="" uk-icon="icon:heart; ratio: 0.8" class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                                        </div>                           
                                    <% }); %>
                                </div>
                            </article>
                        </section>
                    </div>
                </div>
            </main>
    
        <%}%>

    <%- include('./partials/footer') %>

</body>

</html>