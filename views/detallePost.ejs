<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <% if (locals.usuarioLog) { %>
    <main>
        <div class="uk-section uk-section-xsmall">
            <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                <section class="uk-flex uk-width-2-3 detalle-container">
                    <article class="uk-width-2-3 uk-flex uk-flex-center uk-flex-middle detalle-post">
                        <img src="<%= post.imagen %>" alt="Imagen del post" class="imagen-post ">
                    </article>
                    <article class="uk-width-1-3 uk-flex uk-flex-column comentarios-detalle">
                        <div class="info-post uk-flex uk-flex-middle">
                            <img src="https://via.placeholder.com/35" alt="Foto del usuario">
                            <h3><a href='/users/detalleUsuario'><%= post.usuario %> </a></h3>
                            <h6 class="uk-margin-remove uk-width-2-4"><%= post.descripcion %></h6>
                        </div>
                        <a href='/post/<%= post.id %>/editarPost'>Editar Posteo</a>

                        <% if (post.usuario == locals.usuarioLog.usuario) { %> 
                        <form action="/post/<%= post.id %>/eliminarPost" method="POST" >
                        <button type="submit">Eliminar Posteo</button>
                        </form>
                        <% } %>

                        <% comments.forEach(comment => { %>
                        <div class="lista-comentarios" >
                            <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                <div class="uk-width-1-4 uk-flex uk-flex-center">
                                    <img src="https://via.placeholder.com/35" alt="Foto de usuario">
                                </div>
                                <h6 class="uk-margin-remove uk-width-2-4"><a href='/users/<%= comment.idUsuario %>'><%= comment.user.usuario %> </a> <%= comment.comentario %></h6>
                                <a href="" uk-icon="icon:heart; ratio: 0.8" class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                            </div>                           
                        </div>
                        <% }); %>

                        <form method="POST">
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Comentar</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" name="comentario" id="comentario" rows="3">></textarea>
                                <button class="uk-button uk-button-primary uk-margin-small-top" type="submit">Comentar</button>
                            </div>
                        </form>
                                                    
                    
                    </article>
                </section>
            </div>
        </div>
    </main>
    <%}else{%>
        <main>
            <div class="uk-section uk-section-xsmall">
                <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                    <section class="uk-flex uk-width-2-3 detalle-container">
                        <article class="uk-width-2-3 uk-flex uk-flex-center uk-flex-middle detalle-post">
                            <img src="<%= post.imagen %>" alt="Imagen del post" class="imagen-post ">
                        </article>
                        <article class="uk-width-1-3 uk-flex uk-flex-column comentarios-detalle">
                            <div class="info-post uk-flex uk-flex-middle">
                                <img src="https://via.placeholder.com/35" alt="Foto del usuario">
                                <h3><a href='/users/detalleUsuario'><%= post.usuario %> </a></h3>
                                <h6 class="uk-margin-remove uk-width-2-4"><%= post.descripcion %></h6>
                            </div>    
                            <% comments.forEach(comment => { %>
                            <div class="lista-comentarios" >
                                <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                    <div class="uk-width-1-4 uk-flex uk-flex-center">
                                        <img src="https://via.placeholder.com/35" alt="Foto de usuario">
                                    </div>
                                    <h6 class="uk-margin-remove uk-width-2-4"><a href='/users/<%= comment.idUsuario %>'><%= comment.user.usuario %> </a> <%= comment.comentario %></h6>
                                    <a href="" uk-icon="icon:heart; ratio: 0.8" class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                                </div>                           
                            </div>
                            <% }); %>                                                      
                        </article>
                    </section>
                </div>
            </div>
        </main>
        <%}%>

    <%- include('./partials/footer') %>

</body>

</html>